# Enable rewrite engine
RewriteEngine On

# Allow access to asset folders (prevent infinite redirect)
RewriteRule ^assets/ - [L]
RewriteRule ^uploads/ - [L]
RewriteRule ^includes/ - [L]
RewriteRule ^admin/ - [L]
RewriteRule ^Student/ - [L]
RewriteRule ^courses/ - [L]
RewriteRule ^sql/ - [L]
RewriteRule ^process/ - [L]

# Do not rewrite actual file requests
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule .* - [L]

# Do not rewrite actual directory requests
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule .* - [L]
